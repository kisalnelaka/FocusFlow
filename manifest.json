{
    "manifest_version": 3,
    "name": "FocusFlow",
    "version": "1.0",
    "description": "Time management for ADHD - Focus and Flow!",
    "permissions": ["storage", "alarms", "tabs"],
    "chrome_url_overrides": {
      "newtab": "newtab.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  